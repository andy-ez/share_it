<% show_post ||= false %>
<div class='row'>
  <div class='well span0 text-center'>
    <% if logged_in? %>
      <%= link_to(vote_post_comment_path(comment.post, comment, direction: 'up'), method: 'post') do %>
        <i class='icon-arrow-up'></i>
      <% end %><br/>
    <% end %>
    <%= pluralize(comment.total_votes, 'vote') %><br/>
    <% if logged_in? %>
      <%= link_to(vote_post_comment_path(comment.post, comment), method: 'post') do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
  </div>
  <div class='well span8'>
    <em>"<%= comment.body %>"</em>
    <br/>
    <% if show_post %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <span class='quiet'>by </span><%= link_to comment.user.username, user_path(comment.user) %>
    <small>at <%= date_format(comment.created_at) %></small>
    <small class='pull-right'>
      <%= link_to vote_post_comment_path(comment.post, comment, direction: 'up'), method: 'post' do %>
      <i class='icon-thumbs-up'></i>
      <% end %>
      <span> <%= comment.up_votes %> </span>
      <%= link_to vote_post_comment_path(comment.post, comment), method: 'post' do %>
      <i class='icon-thumbs-down'></i>
      <% end %>
      <span> <%= comment.down_votes %> </span>
    </small>
  </div>
</div>