<div class='row'>
  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to(vote_post_path(post, direction: 'up'), 'data-method' => 'post') do %>
        <i class='icon-arrow-up'></i>
      <% end %><br/>
    <% end %>
    <%= pluralize(post.total_votes, 'vote') %><br/>
    <% if logged_in? %>
      <%= link_to(vote_post_path(post), 'data-method' => 'post') do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
  </div>
  <div class='span8 well'>
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
        <span class='quiet'>posted by </span><%= link_to post.user.username, user_path(post.user) %>
      <small>at <%= date_format(post.created_at) %></small>
    </p>
    <small>
      <%= link_to "#{pluralize(post.comments.size, 'comment')}", post_path(post) %>
    </small>
  </div>
</div>